<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.alpha.common.dao.ROrderMapper">
	<resultMap id="BaseResultMap" type="com.alpha.common.model.OrderBean">
		<id column="order_id" property="orderId" jdbcType="VARCHAR" />
		<result column="user_name" property="userName" jdbcType="VARCHAR" />
		<result column="amount" property="amount" jdbcType="NUMERIC" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
	</resultMap>

	<sql id="Base_Column_List">
		order_id, user_name, amount, create_time, update_time
	</sql>

	<select id="getOrderById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from r_order
		where order_id = #{orderId}
	</select>
	
	<select id="getOrderList" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from r_order
		where user_name = #{userName}
	</select>

	<insert id="insert" parameterType="com.alpha.common.model.OrderBean">
		insert into r_order (order_id, user_name,amount,create_time, update_time)
		values (#{orderId}, #{userName},#{amount},#{createTime}, #{updateTime})
	</insert>

</mapper>
